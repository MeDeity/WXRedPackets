<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.deity.wxredpackets.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:background="#E46C62"
        android:orientation="vertical"
        app:layout_heightPercent="30%h">

        <com.deity.wxredpackets.widget.MarqueeText
            android:id="@+id/already_get"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/layout_control"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#fff"
            android:textIsSelectable="false"
            android:textSize="28dp" />

        <com.deity.wxredpackets.widget.MarqueeText
            android:id="@+id/addQQ"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/layout_control"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/aboutme"
            android:textColor="#fff" />

    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/service_setting"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/layout_header"
        app:layout_heightPercent="10%h">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:clickable="true"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="3dp">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">




                <Button
                    android:id="@+id/btn_clear"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_menu_manage"
                    android:gravity="center"
                    android:text="清空记录"
                    app:layout_widthPercent="33%w" />
                <Button
                    android:id="@+id/btn_control"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_menu_send"
                    android:gravity="center"
                    android:text="开启插件"
                    app:layout_widthPercent="33%w" />
                <Button
                    android:id="@+id/btn_share"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_menu_share"
                    android:gravity="center"
                    android:text="分享软件"
                    app:layout_widthPercent="33%w" />

                <Button
                    android:id="@+id/btn_setting"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_menu_manage"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="设置"
                    app:layout_widthPercent="33%w" />
            </com.zhy.android.percent.support.PercentLinearLayout>
        </android.support.v7.widget.CardView>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/service_record"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/service_setting"
        android:orientation="vertical"
        app:layout_heightPercent="60%h">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="10%h">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:clickable="true"
                card_view:cardCornerRadius="3dp"
                card_view:cardElevation="3dp">

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="土豪大人"
                        app:layout_widthPercent="25%w" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="发放时间"
                        app:layout_widthPercent="25%w" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="红包信息"
                        app:layout_widthPercent="25%w" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="红包金额"
                        app:layout_widthPercent="25%w" />
                </com.zhy.android.percent.support.PercentLinearLayout>
            </android.support.v7.widget.CardView>
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="90%h">

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/widget_refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/app_record"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.v4.widget.SwipeRefreshLayout>
        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>
